<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.gaolonglong.gankgirl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/header"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.gank.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.gank.GanHuoActivity" />
        <activity android:name=".ui.activity.gank.MeiZhiActivity" />
        <activity
            android:name=".ui.activity.AboutApp"
            android:parentActivityName=".ui.activity.gank.MainActivity"
            android:theme="@style/Theme.DesignDemo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.gank.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activity.AboutMe"
            android:parentActivityName=".ui.activity.gank.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.gank.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activity.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activity.androidbase.AndroidbaseActivity" />
        <activity android:name=".ui.activity.androidbase.view_anim.snow_view.SnowActivity" />
        <activity android:name=".ui.activity.androidbase.opensourcelib.OpenSourceLibActivity" />
        <activity
            android:name=".ui.activity.github.FolllowingsActivity"
            android:label="@string/title_activity_folllowings"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activity.github.Following_detailActivity" />
        <activity android:name=".ui.activity.github.Repos_detailsActivity" />
        <activity
            android:name=".ui.activity.github.RepoActivity"
            android:label="@string/title_activity_repo"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.home.Shots_detailsActivity"
            android:label="@string/title_activity_shots_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.home.AuthorActivity"></activity>
    </application>

</manifest>